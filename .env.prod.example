# Configuration de la base de données PostgreSQL - Production
# Note: Use "postgres" in production Docker environment
POSTGRES_HOST=postgres
POSTGRES_DB=atelier_kaisla_prod
POSTGRES_USER=kaisla_admin
POSTGRES_PASSWORD=CHANGEZ_MOI_EN_PRODUCTION_SECURE_PASSWORD

# URLs publiques des applications
# Ces URLs sont utilisées pour CORS et les requêtes API
FRONTEND_URL=https://kaisla.lebowvsky.com
BACKOFFICE_URL=https://bokaisla.lebowvsky.com
API_URL=https://api.lebowvsky.com

# Configuration Frontend/Backoffice (Nuxt)
# L'URL de l'API publique accessible depuis le navigateur
NUXT_PUBLIC_API_URL=https://api.lebowvsky.com

# Configuration Backend
NODE_ENV=production
PORT=4000

# Base de données (connexion interne Docker)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=atelier_kaisla_prod
DATABASE_USER=kaisla_admin
DATABASE_PASSWORD=CHANGEZ_MOI_EN_PRODUCTION_SECURE_PASSWORD

# pgAdmin - PostgreSQL Management Tool
# URL: https://pgadminkaisla.lebowvsky.com
PGADMIN_EMAIL=admin@kaisla.local
PGADMIN_PASSWORD=CHANGEZ_MOI_SECURE_PASSWORD
